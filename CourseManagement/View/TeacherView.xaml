<UserControl x:Class="StudentManagementSystem.View.TeacherView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StudentManagementSystem.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border Style="{DynamicResource WinBorderEffect}">
        <Grid>
            <TextBlock
                Margin="0,170,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontFamily="STXingkai"
                FontSize="36"
                Foreground="#333"
                Text="功能开发中，敬请期待！" />
            <Border Width="200" Height="200" Margin="0,70,0,0">
                <Border.Background>
                    <ImageBrush ImageSource="/Assets/Image/WPF.jpg" />
                </Border.Background>
            </Border>
        </Grid>
    </Border>
</UserControl>
