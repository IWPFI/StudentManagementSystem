<UserControl x:Class="StudentManagementSystem.View.AchievementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagementSystem.View" 
             xmlns:cm="clr-namespace:WPF.UI;assembly=WPF.UI"
             xmlns:ViewModel="clr-namespace:StudentManagementSystem.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModel:AchievementViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <!--#region 动画 -->
        <!--
        Storyboard.TargetProperty表示此动画要设置哪个属性，在本例中，它表示要设置FrameworkElement.Margin属性。
        Storyboard.TargetName表示要设置的目标元素，在本例中，它指的是NewPageControl。
        ThicknessAnimationUsingKeyFrames表示要执行的动画类型，它指的是在指定的时间段内，以指定的速度从一个值变化到另一个值的动画。
        EasingThicknessKeyFrame表示指定的关键框，它表示动画在0.5秒内从原始值变化到50,50,0,0。
        -->
        <!--#endregion-->
        <Storyboard x:Key="Storyboard1" >
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="NewPageControl" >
                <EasingThicknessKeyFrame KeyTime="0:0:0.5" Value="50,50,0,0" />
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Style x:Key="MenuBtnStyle" TargetType="Button">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="等线"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="cm:UIProperties.CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#FFA8BCF0"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="cm:UIProperties.MouseOverBackground" Value="#FFA8BCF0"/>
            <Setter Property="cm:UIProperties.MouseOverBorderBrush" Value="Transparent"/>
            <Setter Property="cm:UIProperties.MouseOverForeground" Value="White"/>
            <Setter Property="cm:UIProperties.DropShadowColor" Value="#059AA3AC"/>
            <Setter Property="cm:UIProperties.DropShadowDepth" Value="0"/>
            <Setter Property="cm:UIProperties.DropShadowBlurRadius" Value="10"/>
            <Setter Property="cm:UIProperties.MouseOverDropShadowOpcity" Value="0.2"/>
            <Setter Property="cm:UIProperties.MouseOverDropShadowColor" Value="#059AA3AC"/>
            <Setter Property="cm:UIProperties.MouseOverDropShadowDepth" Value="0"/>
            <Setter Property="cm:UIProperties.MouseOverDropShadowBlurRadius" Value="10"/>
            <Setter Property="Template" Value="{DynamicResource noNormalButtonTemplate}"/>
        </Style>
    </UserControl.Resources>
    <Border Style="{DynamicResource WinBorderEffect}">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Grid>
                <!-- 模块设计
                1、成绩录入：该模块用于录入学生的期中考试、期末测试及考试等成绩。
                2、成绩查询：该模块用于查询学生的各科成绩，方便学校管理者和老师对学生的成绩进行分析。 
                3、成绩统计：该模块用于对学生的成绩进行统计，如求出学生的总分、最高分、最低分等。 
                4、成绩分析：该模块用于对学生的成绩进行综合分析，以提供学校管理者有效的决策支持。
                5、报表管理：该模块用于生成学生成绩的报表，包括成绩单、绩点表等。
                -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="1" Height="80" Margin="20 20 20 20" CornerRadius="15" Background="#fff" BorderBrush="#eee" Width="auto" VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <UniformGrid Columns="5"  >
                        <Button Content="成绩录入" Style="{DynamicResource MenuBtnStyle}" Command="{Binding CmdScoreEntry}">
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="Button.Click">
                                    <BeginStoryboard Storyboard="{StaticResource Storyboard1}"/>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Content="成绩查询" Style="{DynamicResource MenuBtnStyle}" Command="{Binding CmdScoreQuery}"/>
                        <Button Content="成绩统计" Style="{DynamicResource MenuBtnStyle}" Command="{Binding CmdScoreStatistics}"/>
                        <Button Content="成绩分析" Style="{DynamicResource MenuBtnStyle}" Command="{Binding CmdScoreAnalyse}"/>
                        <Button Content="报表管理" Style="{DynamicResource MenuBtnStyle}" Command="{Binding CmdReportManager}"/>
                    </UniformGrid>
                </Border>
                <Grid Grid.Row="1">
                    <ContentControl x:Name="NewPageControl" Content="{Binding AchievementContent}"/>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
