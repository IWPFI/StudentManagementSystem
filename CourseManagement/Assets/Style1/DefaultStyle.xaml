<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cm="clr-namespace:WPF.UI.AttachProperties;assembly=WPF.UI.AttachProperties">

    <Style x:Key="WinBorderEffect" TargetType="Border">
        <Setter Property="Margin" Value="0 5"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" ShadowDepth="1" BlurRadius="5" Opacity="0.5" Direction="1"/>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="NormalButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="228"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="等线"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Background" Value="#FFA8BCF0"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="White"/>
