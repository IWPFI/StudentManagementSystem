<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--监控数据4个表格-->
    <Style x:Key="FirstPageView_MonitoringFormBorderStyle" TargetType="Border">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" ShadowDepth="10" BlurRadius="96" Opacity="0.4" Direction="270"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!--简介-->
    <Style x:Key="FirstPageView_SynopsisBorderStyle" TargetType="Border">
        <Setter Property="Grid.Row" Value="2"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="#FF3B4F81"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#f2f2f2" ShadowDepth="10" BlurRadius="105" Direction="10" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>